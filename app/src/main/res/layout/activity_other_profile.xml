<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.OtherProfileActivity">

    <ImageView
        android:id="@+id/otherProfileImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/otherProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileImg"
        tools:text="Lola, 3 years old, husky" />

    <TextView
        android:id="@+id/otherProfileOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/otherProfileTitle"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileTitle"
        tools:text="Owner: David Perets" />

    <TextView
        android:id="@+id/otherProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/otherProfileTitle"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileOwner"
        tools:text="Phone: 0545455454" />

    <TextView
        android:id="@+id/otherProfileLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/otherProfileOwner"
        app:layout_constraintTop_toBottomOf="@+id/otherProfilePhone"
        tools:text="Location: israel" />

    <TextView
        android:id="@+id/otherProfileWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/otherProfileOwner"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileLocation"
        tools:text="Weight: 4 kg" />

    <TextView
        android:id="@+id/otherProfileDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Lola is a nice dog..."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/otherProfileWeight"
        app:layout_constraintTop_toBottomOf="@+id/otherProfileWeight" />

</androidx.constraintlayout.widget.ConstraintLayout>